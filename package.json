{
  "name": "saucer",
  "version": "1.0.0",
  "description": "A Layout Editor for Drag and Drop",
  "private": true,
  "workspaces": [
    "packages/*",
    "website"
  ],
  "main": "index.js",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/classnames": "^2.2.11",
    "@types/lodash": "^4.14.165",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@types/react-redux": "^7.1.11",
    "@types/shortid": "^0.0.29",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "run-p": "0.0.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5"
  },
  "scripts": {
    "start": "cd website && yarn start",
    "bootstrap": "lerna bootstrap",
    "build:watch": "lerna run build:watch --parallel --scope=@saucer/core --scope=@saucer/editor",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/*.{json,less}": [
      "prettier --write --config ./.prettierrc.json"
    ],
    "**/*.{ts,tsx}": [
      "prettier --write --config ./.prettierrc.json"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moonrailgun/saucer.git"
  },
  "keywords": [
    "layour",
    "editor"
  ],
  "author": "moonrailgun <moonrailgun@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/moonrailgun/saucer/issues"
  },
  "homepage": "https://github.com/moonrailgun/saucer#readme"
}
